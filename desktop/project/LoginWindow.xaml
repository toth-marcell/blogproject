<Window x:Class="project.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="Login or Register" Height="225" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="20">
            <Label>Name</Label>
            <TextBox x:Name="nameField"/>
            <Label>Password</Label>
            <PasswordBox x:Name="passwordField"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Margin="20" x:Name="cancelButton" Click="cancelButton_Click">Cancel</Button>
                <Button Grid.Column="1" Margin="20" x:Name="registerButton" Click="registerButton_Click">Register</Button>
                <Button Grid.Column="2" Margin="20" x:Name="loginButton" Click="loginButton_Click">Login</Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
